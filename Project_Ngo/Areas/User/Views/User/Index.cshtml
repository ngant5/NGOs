@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout_Project.cshtml";
    List<Project_Ngo.Models.Entities.Campaigns> cam = new List<Project_Ngo.Models.Entities.Campaigns>();
    if (Session["Username"] != null && ViewBag.campaigns != null)
    {
        cam = ViewBag.campaigns;
    }
}

<body>
    <div>
        @if (Session["Username"] != null)
        {
            <p>Welcome, @(Session["Username"].ToString())!</p>
            <p>You are now logged in.</p>
            if (ViewBag.campaigns != null && ViewBag.campaigns.Count > 0)
            {
                // Hiển thị danh sách chiến dịch
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Goal Amount</th>
                            <th>Current Amount</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <!-- Thêm các cột khác tùy theo nhu cầu -->
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Project_Ngo.Models.Entities.Campaigns item in cam)
                        {
                            <tr>
                                <td>@item.NameCampaign</td>
                                <td>@item.GoalAmount</td>
                                <td>@item.CurrentAmount</td>
                                <td>@item.StartDate</td>
                                <td>@item.EndDate</td>
                                <!-- Thêm các cột khác tùy theo nhu cầu -->
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No campaigns available.</p>
            }
        }
        else
        {
            <p>Welcome, Guest!</p>
            <p>Please register or log in to access more features.</p>
        }
    </div>
</body>
